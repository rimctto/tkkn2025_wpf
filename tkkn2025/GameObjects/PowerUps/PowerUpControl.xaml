<UserControl
    x:Class="tkkn2025.GameObjects.PowerUpControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="30"
    Height="30">
    <Grid>
        <Ellipse
            x:Name="PowerUpSphere"
            Fill="LimeGreen"
            Opacity="0.5"
            Stroke="White">
            <Ellipse.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard AutoReverse="True" RepeatBehavior="Forever">
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0.25"
                                To="0.75"
                                Duration="0:0:1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Ellipse.Triggers>
        </Ellipse>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="ExtraBold"
            Foreground="White"
            Text="P" />
    </Grid>
</UserControl>
