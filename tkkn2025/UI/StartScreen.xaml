<UserControl
    x:Class="tkkn2025.UI.StartScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gameObjects="clr-namespace:tkkn2025.GameObjects"
    Width="600"
    Height="500"
    Background="Black"
    MouseDown="StartScreen_MouseDown">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="25" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="32"
            FontWeight="Bold"
            Foreground="MediumPurple"
            Text="TKKN 2025" />
        <!--  Power Ups Label  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,0,0,10"
            FontSize="16"
            FontWeight="Bold"
            Foreground="White"
            Text="Power Ups" />

        <!--  Power Ups Grid  -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Header Row  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,0,5"
                FontWeight="Bold"
                Foreground="LightGray"
                Text="Visual" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,0,5"
                FontWeight="Bold"
                Foreground="LightGray"
                Text="Name" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Margin="0,0,0,5"
                FontWeight="Bold"
                Foreground="LightGray"
                Text="Description" />

            <!--  TimeWarp Power Up  -->
            <Border
                Grid.Row="1"
                Grid.Column="0"
                Width="30"
                Height="30"
                Margin="5">
                <gameObjects:PowerUpControl x:Name="TimeWarpVisual" SphereColor="Blue" />
            </Border>
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Margin="5,0"
                VerticalAlignment="Center"
                Foreground="White"
                Text="TimeWarp" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                Margin="5,0"
                VerticalAlignment="Center"
                Foreground="White"
                Text="Slows down time for 3 seconds"
                TextWrapping="Wrap" />

            <!--  Singularity Power Up  -->
            <Border
                Grid.Row="2"
                Grid.Column="0"
                Width="30"
                Height="30"
                Margin="5">
                <gameObjects:PowerUpControl x:Name="SingularityVisual" SphereColor="DarkRed" />
            </Border>
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Margin="5,0"
                VerticalAlignment="Center"
                Foreground="White"
                Text="Singularity" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="2"
                Margin="5,0"
                VerticalAlignment="Center"
                Foreground="White"
                Text="Creates a gravity well when activated (Left Click)"
                TextWrapping="Wrap" />

            <!--  Repulsor Power Up  -->
            <Border
                Grid.Row="3"
                Grid.Column="0"
                Width="30"
                Height="30"
                Margin="5">
                <gameObjects:PowerUpControl x:Name="RepulsorVisual" SphereColor="DarkGreen" />
            </Border>
            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Margin="5,0"
                VerticalAlignment="Center"
                Foreground="White"
                Text="Repulsor" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="2"
                Margin="5,0"
                VerticalAlignment="Center"
                Foreground="White"
                Text="Creates a repelling field that follows you when activated (Right Click)"
                TextWrapping="Wrap" />
        </Grid>

        <!--  Instructions  -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>


            <StackPanel
                Grid.Row="3"
                Grid.Column="0"
                Orientation="Vertical">
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Game Instructions:" />
                <TextBlock
                    Margin="0,2"
                    Foreground="LightGray"
                    Text="- Use WASD or Arrow Keys to move your ship" />
                <TextBlock
                    Margin="0,2"
                    Foreground="LightGray"
                    Text="- Avoid touching the particles" />
                <TextBlock
                    Margin="0,2"
                    Foreground="LightGray"
                    Text="- Collect power-ups to gain special abilities" />
                <TextBlock
                    Margin="0,2"
                    Foreground="LightGray"
                    Text="- Press SPACE to start the game" />
                <TextBlock
                    Margin="0,2"
                    Foreground="LightGray"
                    Text="- Click anywhere to focus on the game" />
            </StackPanel>

            <StackPanel
                Grid.Row="3"
                Grid.Column="1"
                Orientation="Vertical">
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Settings Instructions:" />
                <TextBlock
                    Margin="0,2"
                    Foreground="LightGray"
                    Text="- Play around with settings to find something fun" />
                <TextBlock
                    Margin="0,2"
                    Foreground="LightGray"
                    Text="   and challenging" />
                <TextBlock
                    Margin="0,2"
                    Foreground="LightGray"
                    Text="- Once you find something you can save them and" />
                <TextBlock
                    Margin="0,2"
                    Foreground="LightGray"
                    Text="   shre the settigns files with others so they can try" />
                <TextBlock
                    Margin="0,2"
                    Foreground="LightGray"
                    Text="   your game mode" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>