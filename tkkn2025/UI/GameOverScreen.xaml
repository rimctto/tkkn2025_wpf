<UserControl
    x:Class="tkkn2025.UI.GameOverScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="600"
    Height="500"
    Background="Black"
    MouseDown="GameOverScreen_MouseDown">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Game Over Header  -->
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="32"
            FontWeight="Bold"
            Foreground="#FFC30B0B"
            Text="GAME OVER" />

        <!--  Game and Session Stats  -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Current Game Stats  -->
            <StackPanel Grid.Column="0">
                <TextBlock
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="This Game" />

                <TextBlock
                    Name="CurrentGameTimeText"
                    HorizontalAlignment="Center"
                    Foreground="LightGray"
                    Text="Time: 0.0s" />

                <TextBlock
                    Name="CurrentGameParticlesText"
                    HorizontalAlignment="Center"
                    Foreground="LightGray"
                    Text="Final Particles: 0" />

                <TextBlock
                    Name="CurrentGamePlayerText"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    Foreground="LightBlue"
                    Text="Player: Anonymous" />
            </StackPanel>

            <!--  Session Stats  -->
            <StackPanel Grid.Column="2">
                <TextBlock
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Session Stats" />

                <TextBlock
                    Name="SessionGamesText"
                    HorizontalAlignment="Center"
                    Foreground="LightGray"
                    Text="Games Played: 0" />

                <TextBlock
                    Name="SessionBestText"
                    HorizontalAlignment="Center"
                    Foreground="LightGray"
                    Text="Best Time: 0.0s" />

                <TextBlock
                    Name="SessionAverageText"
                    HorizontalAlignment="Center"
                    Foreground="LightGray"
                    Text="Average: 0.0s" />

                <TextBlock
                    Name="SessionTotalText"
                    HorizontalAlignment="Center"
                    Foreground="LightGray"
                    Text="Total Play Time: 0:00" />
            </StackPanel>
        </Grid>

        <!--  Leaderboard Header  -->
        <TextBlock
            Grid.Row="4"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Foreground="Goldenrod"
            Text="Leaderboard" />

        <!--  Leaderboard  -->
        <Border
            Grid.Row="6"
            Padding="10"
            Background="#FF1A1A1A"
            BorderBrush="Gray"
            BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>

                <!--  Header Row  -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="LightGray"
                    Text="Rank" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="LightGray"
                    Text="Player" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="LightGray"
                    Text="Time" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="LightGray"
                    Text="Particles" />

                <!--  Leaderboard Entries  -->
                <StackPanel
                    Name="LeaderboardPanel"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="4">

                    <!--  Loading Text  -->
                    <TextBlock
                        Name="LoadingText"
                        Margin="0,20"
                        HorizontalAlignment="Center"
                        Foreground="Yellow"
                        Text="Loading leaderboard..." />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Instructions  -->
        <TextBlock
            Grid.Row="8"
            HorizontalAlignment="Center"
            FontSize="14"
            Foreground="White"
            Text="Press SPACE to continue" />
    </Grid>
</UserControl>