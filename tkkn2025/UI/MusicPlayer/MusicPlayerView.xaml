<UserControl
    x:Class="tkkn2025.UI.MusicPlayer.MusicPlayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:tkkn2025.UI.MusicPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="120"
    d:DesignWidth="250"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="MusicButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="5,2" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Focusable" Value="False" />
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Margin" Value="2,1" />
            <Setter Property="Focusable" Value="False" />
        </Style>
    </UserControl.Resources>

    <Border
        Background="#FF151515"
        BorderBrush="Gray"
        BorderThickness="1"
        CornerRadius="3">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="25" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>

            <!--  Control Buttons Row  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Width="30"
                    Command="{Binding PreviousTrackCommand}"
                    Content="⏮️"
                    Style="{StaticResource MusicButtonStyle}"
                    ToolTip="Previous Track" />

                <Button
                    Grid.Column="1"
                    Width="30"
                    Command="{Binding PlayPauseCommand}"
                    Style="{StaticResource MusicButtonStyle}"
                    ToolTip="Play/Pause">
                    <TextBlock Text="{Binding IsPlaying, Converter={x:Static local:BoolToPlayPauseConverter.Instance}}" />
                </Button>

                <Button
                    Grid.Column="2"
                    Width="30"
                    Command="{Binding NextTrackCommand}"
                    Content="⏭️"
                    Style="{StaticResource MusicButtonStyle}"
                    ToolTip="Next Track" />

                <!--  Enable/Disable Toggle  -->
                <Button
                    Grid.Column="4"
                    Width="35"
                    Click="EnableButton_Click"
                    Style="{StaticResource MusicButtonStyle}"
                    ToolTip="Enable/Disable Music">
                    <TextBlock Text="{Binding MusicEnabled, Converter={x:Static local:BoolToMusicIconConverter.Instance}}" />
                </Button>
            </Grid>

            <!--  Track Name Display with Scrolling  -->
            <Border
                Grid.Row="1"
                Background="#FF1E1E1E"
                BorderBrush="DarkGray"
                BorderThickness="1"
                CornerRadius="2">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="11"                   
                    FontWeight="Bold"
                    Foreground="LightBlue"
                    Text="{Binding DisplayedTrackName}" />
            </Border>

            <!--  Settings Checkboxes  -->
            <StackPanel
                Grid.Row="2"
                Margin="0,2"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <CheckBox
                    Content="Repeat Track"
                    IsChecked="{Binding RepeatTrack}"
                    ToolTip="Repeat current track" />
                <CheckBox
                    Margin="10,1,2,1"
                    Click="DefaultTrackCheckBox_Click"
                    Content="Default Track"
                    ToolTip="Set current track as default startup track" />
            </StackPanel>

            <!--  Status/Info Row  -->
            <TextBlock
                x:Name="StatusText"
                Grid.Row="3"
                HorizontalAlignment="Center"
                FontSize="9"
                Foreground="LightGray"
                Text="{Binding CurrentTrackName}"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis" />
        </Grid>
    </Border>
</UserControl>
